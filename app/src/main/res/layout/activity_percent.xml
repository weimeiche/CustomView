<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.navyliu.customview.CustomView.PercentView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@color/red"
        android:padding="10dp"
        app:percent_background_color="@color/gray"
        app:percent_circle_gravity="left"
        app:percent_circle_progress="90"
        app:percent_circle_radius="50dp"
        app:percent_progress_color="@color/blue"/>
</android.support.constraint.ConstraintLayout>