<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.navyliu.customview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".CustomViewApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Animation.TweenAnimationActivity"/>

        <activity android:name=".CustomView.CustomViewActivity"/>
        <activity android:name=".CustomView.CustomTitleBarActivity" />
        <activity android:name=".CustomView.CustomPercentActivity" />
        <activity android:name=".CustomView.CustomClearEditActivity" />
        <activity android:name=".CustomView.CheckCodeActivity" />
        <activity android:name=".CustomView.TagActivity" />

        <activity android:name=".Dialog.DialogActivity" />

        <activity
            android:name=".Translucent.TranslucentActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentTheme"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"/>
    </application>

</manifest>