<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。 -->
        <shape>
            <gradient android:angle="90" android:endColor="@color/theme_backgroud" android:startColor="@color/theme_backgroud" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/theme_btn"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <!-- 定义当button 处于pressed 状态时的形态。 -->
        <shape>
            <gradient android:angle="90" android:endColor="@color/theme_backgroud" android:startColor="@color/theme_backgroud" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/theme_btn"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <!-- 定义当button获得 focus时的形态 -->
        <shape>
            <gradient android:angle="90" android:endColor="@color/theme_backgroud" android:startColor="@color/theme_backgroud" android:type="linear" />
            <stroke android:width="1dp" android:color="@color/theme_btn"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>