<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="透明"/>

        <Button
            android:id="@+id/btn_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="缩放"/>

        <Button
            android:id="@+id/btn_rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="翻转"/>

        <Button
            android:id="@+id/btn_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="移动"/>

        <Button
            android:id="@+id/btn_set_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="组合"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/loading_1"/>


    <Button
        android:id="@+id/btn_frame_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="逐帧动画"/>

    <ProgressBar
        style="@style/loading"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/img_frame_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/animlist_logo"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_property_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="属性动画"/>


    <ImageView
        android:id="@+id/img_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/loading_1"/>

    <Button
        android:id="@+id/btn_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="差值动画"/>

    <TextView
        android:id="@+id/txt_value"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>



</LinearLayout>
