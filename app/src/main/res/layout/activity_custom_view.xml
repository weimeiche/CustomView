<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.navyliu.customview.MainActivity">

    <com.navyliu.customview.CustomView.CustomTitleBar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:title_background_color="@color/blue"
        app:title_text="标题栏"/>

    <com.navyliu.customview.CustomView.PercentView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@color/red"
        android:padding="10dp"
        app:percent_background_color="@color/gray"
        app:percent_circle_gravity="left"
        app:percent_circle_progress="90"
        app:percent_circle_radius="50dp"
        app:percent_progress_color="@color/blue"/>

    <com.navyliu.customview.CustomView.TagsLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:tagHorizontalSpace="10dp"
        app:tagVerticalSpace="10dp"
        android:id="@+id/tags_layout"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</LinearLayout>
