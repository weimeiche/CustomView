<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。 -->
        <shape>
            <gradient android:angle="90" android:endColor="@color/theme_btn_hover" android:startColor="@color/theme_btn_hover" android:type="linear"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="@color/theme_btn_hover"/>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <!-- 定义当button 处于pressed 状态时的形态。 -->
        <shape>
            <gradient android:angle="90" android:endColor="@color/theme_backgroud" android:startColor="@color/theme_backgroud" android:type="linear"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="@color/theme_backgroud"/>
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <!-- 定义当button获得 focus时的形态 -->
        <shape>
            <!-- 设置渐变 -->
            <gradient android:angle="90" android:endColor="@color/theme_btn_hover" android:startColor="@color/theme_btn_hover" android:type="linear"/>
            <!-- 设置圆角 -->
            <corners android:radius="5dp"/>
            <!-- 设置边缘线 -->
            <stroke android:width="2dp" android:color="@color/theme_btn_hover"/>
            <!-- 设置偏移量 -->
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp"/>
        </shape>
    </item>

</selector>